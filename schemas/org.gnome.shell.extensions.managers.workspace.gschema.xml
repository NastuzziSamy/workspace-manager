<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
    <schema id="org.gnome.shell.extensions.managers.workspace"
        path="/org/gnome/shell/extensions/managers/workspace/">

        <key type="b" name="debug">
            <default>false</default>
            <summary>Debug workspace manager</summary>
            <description>
                Show debug messages
            </description>
        </key>

        <key type="b" name="enable-workspace-bar">
            <default>true</default>
            <summary>Enable workspace bar</summary>
            <description>
                Workspace bar shows all opened workspaces and allow navigation
            </description>
        </key>

        <key type="b" name="disable-attention-notification">
            <default>true</default>
            <summary>Disable window attention notification</summary>
            <description>
                Default functionnality that notify when a window is ready
            </description>
        </key>

        <key type="b" name="cycle-focus-workspaces">
            <default>true</default>
            <summary>Cycle when focusing a new workspace</summary>
            <description>
                Always find a workspace to focus in the chosen direction
            </description>
        </key>

        <!-- <key type="as" name="bar-workspace-apps">
            <default><![CDATA[[]]]></default>
            <summary>App to start for each workspace</summary>
            <description>
                Middle click on workspace name launch the application
            </description>
        </key> -->

    </schema>
</schemalist>
